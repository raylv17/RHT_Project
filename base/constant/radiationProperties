radiation on;

radiationModel  fvDOM;

fvDOMCoeffs
{
    nPhi        _phi;      // azimuthal angles in PI/2 on X-Y.(from Y to X)
    nTheta      _theta;      // polar angles in PI (from Z to X-Y plane)
    maxIter     40;      // maximum number of iterations
    tolerance   1e-10;   // convergence criteria for radiation iteration
}

// Number of flow iterations per radiation iteration
solverFreq 1;

absorptionEmissionModel constantAbsorptionEmission;
